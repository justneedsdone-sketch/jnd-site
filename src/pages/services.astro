---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../consts";

const PAGE_TITLE = `Services | ${SITE_TITLE}`;
const PAGE_DESC =
  "Business cards, yard signs, banners, window perf, stickers/vinyl, sublimation, and button formats.";
---

<Layout title={PAGE_TITLE} description={PAGE_DESC}>
  <section class="wrap">
    <header class="hero">
      <span class="tag">Fast • Clean • Affordable</span>
      <h1>Services</h1>
      <p class="sub">
        Tell us what you need (size, quantity, deadline) and we’ll quote it quick.
      </p>

      <div class="ctaRow">
        <a class="btn btnPrimary" href="/contact/">Get a quick quote</a>
        <a
          class="btn"
          href="https://www.facebook.com/JustNeedsDone"
          target="_blank"
          rel="noopener noreferrer"
        >
          Message us on Facebook
        </a>
      </div>
    </header>

    <section class="grid" aria-label="Service categories">
      <article class="card">
        <h3>Business Cards</h3>
        <p>Clean, professional cards that help you look legit and close.</p>
      </article>

      <article class="card">
        <h3>Yard Signs</h3>
        <p>Bold, readable signs for promotions, events, and campaigns.</p>
      </article>

      <article class="card">
        <h3>Banners</h3>
        <p>Big impact for grand openings, sales, and storefront promotions.</p>
      </article>

      <article class="card">
        <h3>Window Perf</h3>
        <p>Storefront graphics that look great and still let light in.</p>
      </article>

      <article class="card">
        <h3>Stickers / Vinyl</h3>
        <p>Decals, labels, and vinyl graphics for branding and info.</p>
      </article>

      <article class="card">
        <h3>Sublimation</h3>
        <p>Cups, tumblers, towels, license plates, and more — custom printed fast.</p>
      </article>

      <article class="card wide">
        <h3>Button Formats</h3>
        <p>
          Buttons, magnets, spinners, keychains, mirrors, mirrored keychains — great for promos,
          giveaways, and merch.
        </p>
      </article>
    </section>

    <section class="bar" aria-label="How to get a quote">
      <strong>Quick start:</strong>
      Email <a class="link" href="mailto:Just.Needs.Done@gmail.com">Just.Needs.Done@gmail.com</a>
      with what you need + size + quantity + deadline.
    </section>
  </section>
</Layout>

<style>
  :root{
    --jnd-blue: var(--jnd-blue, #0b4fb3);
    --jnd-red: var(--jnd-red, #d62828);
    --ink:#111827;
    --muted:#6b7280;
    --panel:#f3f4f6;
    --line:#e5e7eb;
  }
  .wrap{max-width:1100px;margin:0 auto;padding:24px;}
  .hero{border:1px solid var(--line);border-radius:18px;padding:28px;background:#fff;}
  .tag{display:inline-block;font-weight:800;color:#fff;background:var(--jnd-blue);padding:6px 10px;border-radius:999px;font-size:13px;}
  h1{margin:14px 0 10px;color:var(--ink);font-size:42px;line-height:1.1;overflow-wrap:normal;word-break:normal;hyphens:none;}
  .sub{color:var(--muted);font-size:18px;max-width:70ch;margin:0;}
  .ctaRow{display:flex;gap:12px;flex-wrap:wrap;margin-top:16px;}
  .btn{display:inline-block;padding:12px 14px;border-radius:12px;text-decoration:none;font-weight:800;border:1px solid var(--line);background:#fff;color:var(--ink);}
  .btnPrimary{background:var(--jnd-blue);color:#fff;border-color:transparent;}
  .btnPrimary:hover{filter:brightness(0.95);}
  .grid{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:14px;margin-top:18px;}
  .card{border:1px solid var(--line);border-radius:16px;background:#fff;padding:16px;}
  .card h3{margin:0 0 6px;font-size:18px;color:var(--ink);white-space:normal;overflow-wrap:normal !important;word-break:keep-all !importan
  .card p{margin:0;color:var(--muted);line-height:1.5;}
  .wide{grid-column:1/-1;}
  .bar{margin-top:16px;border:1px solid var(--line);border-radius:16px;background:var(--panel);padding:16px;color:var(--ink);}
  .link{font-weight:800;}
  @media (max-width: 900px){ .grid{grid-template-columns:1fr;} h1{font-size:34px;} }
</style>
