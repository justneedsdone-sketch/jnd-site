---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../consts";

const PAGE_TITLE = `Services | ${SITE_TITLE}`;
const PAGE_DESC =
  "Business cards, yard signs, banners, window perf, stickers/vinyl, sublimation, and button formats.";

const FB_URL = "https://www.facebook.com/JustNeedsDone";
---

<Layout title={PAGE_TITLE} description={PAGE_DESC}>
  <header class="hero">
    <h1>Services</h1>
    <p>
      Fast, clean, affordable print and sign work for small businesses, nonprofits, and the public.
      Email us what you need (size, quantity, deadline) and we’ll quote it.
    </p>
  </header>

  <section class="grid" aria-label="Services list">
    <article class="card">
      <h3>Business Cards</h3>
      <p>Professional cards that help you look legit and close.</p>
    </article>

    <article class="card">
      <h3>Yard Signs</h3>
      <p>Bold, readable signs for promotions, events, and campaigns.</p>
    </article>

    <article class="card">
      <h3>Banners</h3>
      <p>Durable banners for storefronts, grand openings, and sales.</p>
    </article>

    <article class="card">
      <h3>Window Perf</h3>
      <p>Storefront graphics that look great and still let light in.</p>
    </article>

    <article class="card">
      <h3>Stickers / Vinyl</h3>
      <p>Decals, labels, and vinyl graphics for branding and info.</p>
    </article>

    <article class="card">
      <h3>Sublimation</h3>
      <p>Cups, tumblers, towels, license plates, and more — custom printed fast.</p>
    </article>

    <article class="card wide">
      <h3>Button Formats</h3>
      <p>
        Buttons, magnets, spinners, keychains, mirrors, mirrored keychains — great for promos,
        giveaways, and merch.
      </p>
    </article>
  </section>

  <section class="cta" aria-label="Get a quote">
    <a class="btn primary" href="/contact/">Get a quick quote</a>
    <a class="btn outline" href={FB_URL} target="_blank" rel="noopener noreferrer">
      Message us on Facebook
    </a>
  </section>

  <style>
    .hero {
      margin-bottom: 1.5rem;
      text-align: center;
    }
    .hero h1 {
      margin: 0 0 0.5rem;
    }
    .hero p {
      margin: 0 auto;
      max-width: 70ch;
      color: rgba(var(--black), 0.7);
    }

    .grid {
      display: grid;
      gap: 1rem;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      margin-top: 1.5rem;
    }
    @media (max-width: 900px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }

    .card {
      border: 1px solid rgba(var(--black), 0.12);
      border-radius: 16px;
      padding: 1.1rem 1.1rem 1rem;
      background: #fff;
      box-shadow: 0 6px 18px rgba(15, 23, 42, 0.06);
    }
    .card h3 {
      margin: 0 0 0.5rem;
      line-height: 1.15;
    }
    .card p {
      margin: 0;
      color: rgba(var(--black), 0.7);
    }

    .wide {
      grid-column: 1 / -1;
    }

    .cta {
      margin-top: 2rem;
      display: flex;
      gap: 0.75rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-block;
      padding: 0.75rem 1rem;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 800;
      border: 1px solid rgba(var(--black), 0.12);
    }

    /* JND brand color vibe (uses your global --accent which we set to JND blue) */
    .primary {
      background: var(--accent);
      color: #fff;
      border-color: transparent;
    }

    .outline {
      background: #fff;
      color: var(--accent);
      border-color: rgba(var(--black), 0.18);
    }

    .btn:hover {
      filter: brightness(0.98);
    }
  </style>
</Layout>
