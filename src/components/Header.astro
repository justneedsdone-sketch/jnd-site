---
/**
 * Header.astro (custom)
 * Logo file expected at: /public/jnd-logo.png
 */
const FB_URL = "https://www.facebook.com/JustNeedsDone"; // TODO: replace with your real Facebook page link
---

<header class="site-header">
  <nav class="nav" aria-label="Primary">
    <!-- Left: Logo + Name -->
    <a class="brand" href="/" aria-label="Just Needs Done Enterprises - Home">
      <img
        class="brand-logo"
        src="/jnd-logo.png"
        alt="Just Needs Done Enterprises logo"
        width="44"
        height="44"
        loading="eager"
        decoding="async"
      />
      <span class="brand-text">Just Needs Done Enterprises</span>
    </a>

    <!-- Right: Facebook only -->
    <div class="actions">
      <a class="icon-btn" href={FB_URL} target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Visit our Facebook page</span>

        <!-- Simple Facebook icon (SVG) -->
        <svg viewBox="0 0 24 24" aria-hidden="true" width="26" height="26">
          <path
            fill="currentColor"
            d="M22 12a10 10 0 1 0-11.56 9.88v-6.99H7.9V12h2.54V9.8c0-2.5 1.49-3.88 3.77-3.88
               1.09 0 2.23.2 2.23.2v2.46h-1.26c-1.24 0-1.63.77-1.63 1.56V12h2.78l-.44 2.89h-2.34v6.99A10 10 0 0 0 22 12z"
          />
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  .site-header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 0;
    text-decoration: none;
    color: var(--black);
    min-width: 0;
  }

  .brand-logo {
    display: block;
    border-radius: 10px;
  }

  .brand-text {
    font-weight: 700;
    font-size: 1.05rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .actions {
    display: flex;
    align-items: center;
  }

  .icon-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem;
    color: var(--black);
    text-decoration: none;
    border-radius: 12px;
  }

  .icon-btn:hover {
    background: rgba(var(--black), 4%);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 520px) {
    .brand-text {
      font-size: 0.95rem;
    }
    .brand-logo {
      width: 38px;
      height: 38px;
    }
  }
</style>
